<h1>Listing bars</h1>

<div class="searchForm">
    <%= form_tag "bars", :method => :get, :id => "filter_bars" do %>
        <div id="Area">
        <%=@areas.each do |area| %>
            <%= area %>
            <%= check_box_tag "areas[#{area}]", 1, @selected_areas.include?(area), :id => "areas_#{area}" %>
        <% end %>
        </div> 
        <div id="Time">
            <label for="startTime">Start Time:</label>
            <input type="text" name="startTime" value="<%=@start_time%>">
            <label for="endTime">End Time:</label>
            <input type="text" name="endTime" value="<%=@end_time%>">
            <%= @start_time %>
            <%= @end_time %> 
        </div>
        <div id="submitForm">
            <%= submit_tag 'Search', :id => 'bars_filter'%>
        </div>
    <% end %>
</div>

<table>
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Contact</th>
    <th>Area</th>
    <th>Start Time</th>
    <th>End Time</th>        
    <th>Comments</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bars.each do |bar| %>
  <tr>
    <td><%= bar.id %></td>
    <td><%= bar.name %></td>
    <td><%= bar.contact %></td>
    <td><%= bar.area %></td>
    <td><%= bar.start_time %></td>
    <td><%= bar.end_time %></td>
    <td><%= bar.comments %></td>
